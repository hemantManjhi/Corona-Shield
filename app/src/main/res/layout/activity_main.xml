<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:src="@drawable/main" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="Corona Shield"
                android:textColor="#222222"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameText"
                android:layout_marginBottom="12dp"
                android:text="We stay inside, Corona stay outside"
                android:textColor="#555555"
                android:textSize="14sp" />

            <Button
                android:id="@+id/coronaPrevention"
                android:layout_height="50dp"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:text="Corona Prevention"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/coronaSymptoms"
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:text="Corona Symptoms"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/whyAyurveda"
                android:layout_height="50dp"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:text="Why Ayurveda?"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/yogaAndExercise"
                android:layout_height="50dp"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:text="Yoga and Exercises"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/immunityBoosting"
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:text="Immunity Boosting Ayush Ministry Measures"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/goodLifeStyle"
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:text="Good Life Style Measures"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/covidCare"
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:text="Covid-19 Care"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/forMore"
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:text="For More"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/developer"
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:text="Developed By"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff" />

        </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:paddingTop="8dp"
                android:layout_marginBottom="60dp"
                android:src="@drawable/thankyou" />

    </LinearLayout>
</ScrollView>